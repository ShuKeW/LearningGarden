<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.porterduffxfermode.PorterDuffXfermodeView
            android:id="@+id/porterDuffXfermodeView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toLeftOf="@id/src"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/title_color"
            android:text="clear"
            app:layout_constraintTop_toBottomOf="@id/porterDuffXfermodeView"/>
    <Button
            android:id="@+id/src"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/clear"
            app:layout_constraintRight_toLeftOf="@id/dst"
            android:textColor="@color/title_color"
            android:text="src"
            app:layout_constraintTop_toTopOf="@id/clear"/>
    <Button
            android:id="@+id/dst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/src"
            app:layout_constraintRight_toLeftOf="@id/src_over"
            android:textColor="@color/title_color"
            android:text="dst"
            app:layout_constraintTop_toTopOf="@id/clear"/>
    <Button
            android:id="@+id/src_over"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/dst"
            app:layout_constraintRight_toRightOf="parent"
            android:text="SrcOver"
            app:layout_constraintTop_toTopOf="@id/clear"/>
    <Button
            android:id="@+id/dst_over"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toLeftOf="@id/src_in"
            android:textColor="@color/title_color"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="DstOver"
            app:layout_constraintTop_toBottomOf="@id/clear"/>
    <Button
            android:id="@+id/src_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/dst_over"
            android:textColor="@color/title_color"
            app:layout_constraintRight_toLeftOf="@id/dst_in"
            android:text="SrcIn"
            app:layout_constraintTop_toTopOf="@id/dst_over"/>
    <Button
            android:id="@+id/dst_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toLeftOf="@id/src_out"
            android:textColor="@color/title_color"
            app:layout_constraintLeft_toRightOf="@id/src_in"
            android:text="DstIn"
            app:layout_constraintTop_toTopOf="@id/dst_over"/>
    <Button
            android:id="@+id/src_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/dst_in"
            android:textColor="@color/title_color"
            app:layout_constraintRight_toRightOf="parent"
            android:text="SrcOut"
            app:layout_constraintTop_toTopOf="@id/dst_over"/>
    <Button
            android:id="@+id/dst_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toLeftOf="@id/src_atop"
            android:textColor="@color/title_color"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="DstOut"
            app:layout_constraintTop_toBottomOf="@id/dst_over"/>
    <Button
            android:id="@+id/src_atop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/dst_out"
            android:textColor="@color/title_color"
            app:layout_constraintRight_toLeftOf="@id/dst_atop"
            android:text="SrcATop"
            app:layout_constraintTop_toTopOf="@id/dst_out"/>
    <Button
            android:id="@+id/dst_atop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/src_atop"
            app:layout_constraintRight_toLeftOf="@id/xor"
            android:textColor="@color/title_color"
            android:text="DstATop"
            app:layout_constraintTop_toTopOf="@id/dst_out"/>
    <Button
            android:id="@+id/xor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/dst_atop"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/title_color"
            android:text="Xor"
            app:layout_constraintTop_toTopOf="@id/dst_out"/>
    <Button
            android:id="@+id/darken"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toLeftOf="@id/lighten"
            android:textColor="@color/title_color"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="DarKen"
            app:layout_constraintTop_toBottomOf="@id/dst_out"/>
    <Button
            android:id="@+id/lighten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:textColor="@color/title_color"
            app:layout_constraintLeft_toRightOf="@id/darken"
            app:layout_constraintRight_toLeftOf="@id/multiply"
            android:text="Lighten"
            app:layout_constraintTop_toTopOf="@id/darken"/>
    <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/lighten"
            android:textColor="@color/title_color"
            app:layout_constraintRight_toLeftOf="@id/screen"
            android:text="Multiply"
            app:layout_constraintTop_toTopOf="@id/darken"/>
    <Button
            android:id="@+id/screen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:textColor="@color/title_color"
            app:layout_constraintLeft_toRightOf="@id/multiply"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Screen"
            app:layout_constraintTop_toTopOf="@id/darken"/>
    <Button
            android:id="@+id/start_second_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            app:layout_constraintTop_toBottomOf="@id/darken"
            android:text="startSecondActivity"/>
</android.support.constraint.ConstraintLayout>